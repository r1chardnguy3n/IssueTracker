@using IssueTrackerWebApp.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
    
}

<div class="container">
    <div class="d-flex justify-content-center h-100">
        <div class="card">
            <div class="card-header">
                <h3>Isssue Tracker Sign In</h3>
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.ValidationMessageFor(m => m.Email, "", new {placeholder ="Email", @class = "text-danger" })
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-envelope-o"></i></span>
                        </div>
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"><i class="fa fa-lock"></i></span>
                        </div>
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>

                         
                    <input type="submit" value="Log in" class="btn login_btn" />
            

                    @* Enable this once you have account confirmation enabled for password reset functionality
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>*@
                }

                <div class="card-footer">
                    <div class="d-flex justify-content-center links">
                        Don't have an account?<a href="@Url.Action("Register","Account")">Sign up</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <a href="#">Use Guest Account</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Styles.Render("~/Content/login")
}
